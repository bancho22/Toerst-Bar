<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/toerst"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bani.toerstbar.MainActivity" >

    <Button
        android:id="@+id/viewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bookTable"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bookTable"
        android:layout_marginBottom="118dp"
        android:text="View Menu"
        android:textSize="33sp" />

    <Button
        android:id="@+id/winShot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Win a Free Shot"
        android:textSize="33sp" />

    <Button
        android:id="@+id/bookTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/winShot"
        android:layout_alignLeft="@+id/winShot"
        android:layout_alignRight="@+id/winShot"
        android:text="Book a Table"
        android:textSize="33sp" />

</RelativeLayout>