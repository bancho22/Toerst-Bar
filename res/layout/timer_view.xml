<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood" >

    <Button
        android:id="@+id/backToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:text="Back to Home Screen" />

    <SeekBar
        android:id="@+id/claim"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/backToHome"
        android:layout_alignLeft="@+id/backToHome"
        android:layout_alignRight="@+id/backToHome"
        android:layout_marginBottom="56dp"
        android:clickable="false"
        android:max="100"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="00:00:00"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="time left to"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dontslide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/claim"
        android:layout_alignLeft="@+id/claim"
        android:layout_alignRight="@+id/claim"
        android:textStyle="italic"
        android:layout_marginBottom="14dp"
        android:text="*don&apos;t slide before you&apos;ve claimed your drink"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

</RelativeLayout>
